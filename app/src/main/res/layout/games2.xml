<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/Player1"
        android:layout_width="match_parent"
        android:layout_height="316dp"
        android:background="#574B4B"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Generator_pool">

        <LinearLayout
            android:id="@+id/field1"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="#CFBDBD"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_field1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </RelativeLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/baggage"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/wind" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/fire" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/plant" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/water" />

                    <Button
                        android:id="@+id/btn_baggege"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="Рюкзак" />

                </LinearLayout>

            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Player2"
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:background="#574B4B"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/Generator_pool"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/field2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="20dp"
            android:background="#CFBDBD"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_field2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Generator_pool"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#251839"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/Player1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Player2">

        <RelativeLayout
            android:id="@+id/rl_Pool"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>